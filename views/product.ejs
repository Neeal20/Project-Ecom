      <!-- Products Details -->
      <section id="product-details" class="section-p1">
        <div class="single-product-img">
          <img
            id="MainImg"
            src="/img/products/f1.jpg"
            width="100%"
            alt="chemise"
          />
          <div class="small-img-group">
            <div class="small-img-column">
              <img
                class="SmallImg"
                src="/img/products/f1.jpg"
                width="100%"
                alt="chemise"
              />
              <img
              class="SmallImg"
                src='/img/products/f2.jpg'
                width="100%"
                alt="chemise"
              />
              <img
                class="SmallImg"
                src="/img/products/f3.jpg"
                width="100%"
                alt="chemise"
              />
